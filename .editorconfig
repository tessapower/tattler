# EditorConfig for Tattler project
# Supported by Visual Studio, VS Code, and many editors
# https://editorconfig.org/

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ source files
[*.{cpp,h,hpp,c}]
indent_style = space
indent_size = 4

# HLSL shaders
[*.{hlsl,hlsli}]
indent_style = space
indent_size = 4

# CMake
[CMakeLists.txt]
indent_style = space
indent_size = 4

[*.cmake]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown documentation
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
